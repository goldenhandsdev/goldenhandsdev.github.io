<mvc:View
    controllerName="projectlist.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    
    <Page
        id="masterPage"
        title="{i18n>masterTitle}"
        showNavButton="false"
        class="sapUiResponsiveMargin">
        
        <content>
            <List
                id="projectList"
                items="{/projects}"
                mode="SingleSelectMaster"
                selectionChange="onSelectionChange"
                growing="true"
                growingThreshold="20"
                class="sapUiResponsiveMargin">
                
                <ObjectListItem
                    id="projectListItem"
                    title="{projectTitle}"
                    number="{projectStartDate}"
                    numberUnit="Start"
                    press="onItemPress"
                    type="Active">
                    
                    <attributes>
                        <ObjectAttribute
                            title="End Date"
                            text="{projectEndDate}" />
                        <ObjectAttribute
                            title="Location"
                            text="{location}" />
                    </attributes>
                    
                    <firstStatus>
                        <ObjectStatus
                            text="{projectStartDate} - {projectEndDate}"
                            state="Success" />
                    </firstStatus>
                </ObjectListItem>
            </List>
        </content>
    </Page>
</mvc:View>
